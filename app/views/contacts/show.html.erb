<div style="max-width: 600px; margin: 50px auto; padding: 20px; border: 1px solid #dee2e6; border-radius: 5px;">
  <h1><%= @contact.first_name %> <%= @contact.last_name %></h1>
  
  <div style="margin: 20px 0;">
    <p><strong>Phone:</strong> <%= @contact.phone %></p>
  </div>
  
  <div style="display: flex; gap: 10px; margin-top: 30px;">
    <%= link_to "Edit", edit_contact_path(@contact), style: "background: #007bff; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
    <%= button_to "Delete", contact_path(@contact), method: :delete, data: { confirm: "Are you sure?" }, style: "background: #dc3545; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;" %>
    <%= link_to "Back to List", contacts_path, style: "background: #6c757d; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
  </div>
</div>